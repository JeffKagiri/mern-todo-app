{
  "name": "mern-todo-azure",
  "version": "1.0.0",
  "description": "Simple Todo App deployed on Azure",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "cd client && npm install && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "azure-build": "npm run install-client && npm run build",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "mern",
    "todo",
    "azure",
    "mongodb",
    "react",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}